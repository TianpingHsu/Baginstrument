{
    // https://developer.chrome.com/docs/extensions/reference/manifest?hl=zh-cn
    "manifest_version": 3,
    "name": "Baginstrument",
    "description": "pick it",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Baginstrument",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "contextMenus",
        "tabs", 
        "notifications",
        "webRequest",
        "storage",
        "commands"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "homepage_url": "https://nextjs.org/",
    "background": {
        "service_worker": "js/service-worker.js"
    },
    "content_scripts": [
        {
            "js": [
                "js/foreground.js"
            ],
            "matches": [
                "https://github.com/*"
            ]
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/jquery-1.8.3.js",
                "js/content-script.js"
            ],
            "css": [
                "css/custom.css"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*/*.png",
                "*://*/*.jpg",
                "*://*/*.gif",
                "*://*/*.bmp"
            ],
            "js": [
                "js/show-image-content-size.js"
            ]
        }
    ],
    "commands": {
        "save-it-into-pocket": {
            "suggested_key": "Shift+Alt+S",
            "description": "Inject a script on the page"
        }
    },
    "omnibox": {
        "keyword": "pick"
    }
}